@model GameLibraryProject.Models.Genre
@{
    ViewBag.Title = "Update genre";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Genre", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.GenreId)

    @Html.LabelFor(bt => bt.Name, "Name:")
    <br />
    @Html.EditorFor(bt => bt.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}
