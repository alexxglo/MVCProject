    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
        <a class="my-0 mr-md-auto font-weight-normal text-dark navbar-brand" @Html.ActionLink("THE LIBRARY", "Index", "Game", new { area = "" }, new { @class = "navbar-brand" })</a>
