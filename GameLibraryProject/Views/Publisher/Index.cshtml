
@{
    ViewBag.Title = "Publishers";
}

<h2 class="mt-5 mb-5 text-center">@ViewBag.Title</h2>


<table class="table table-dark">
    <thead>
    <th>Name</th>
    <th>Store</th>
    @if (ViewContext.HttpContext.User.IsInRole("Admin")) { 
        <th>Update</th>}
    <th>Details</th>
    </thead>
    <tbody>
        @foreach (var publisher in ViewBag.Publishers)
        {
            <tr>
                <td>@publisher.Name</td>
                <td>@publisher.Store.Name</td>
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <td>@Html.ActionLink("Update", "Edit", new { id = publisher.PublisherId })</td>
}
                <td>@Html.ActionLink("Details", "Details", new { id = publisher.PublisherId })</td>
            </tr>
        }
    </tbody>
</table>

<br />
@if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("User") ) {
    <button class="btn btn-outline-dark  mt-3">@Html.ActionLink("Add publisher", "New", "Publisher")</button>
    }